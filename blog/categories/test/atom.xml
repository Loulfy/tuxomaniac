</span><span class='line'>		<span class="n">depart_x</span> <span class="o">=</span> <span class="n">sprite_x</span>
</span><span class='line'>		<span class="n">depart_y</span> <span class="o">=</span> <span class="n">sprite_y</span>
</span><span class='line'>    	<span class="n">t</span> <span class="o">=</span> <span class="mi">1</span>
</span><span class='line'>		<span class="n">v</span> <span class="o">=</span> <span class="n">vitesse</span> <span class="o">/</span> <span class="p">(</span><span class="nb">math.sqrt</span><span class="p">((</span><span class="n">cible_x</span> <span class="o">-</span> <span class="n">sprite_x</span><span class="p">)</span><span class="o">^</span><span class="mi">2</span> <span class="o">+</span> <span class="p">(</span><span class="n">cible_y</span> <span class="o">-</span> <span class="n">sprite_y</span><span class="p">)</span><span class="o">^</span><span class="mi">2</span><span class="p">))</span>
