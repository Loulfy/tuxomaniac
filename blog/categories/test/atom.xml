</span><span class='line'>	<span class="n">t</span> <span class="o">=</span> <span class="mi">1</span>
</span><span class='line'>	<span class="n">sprite</span> <span class="o">=</span> <span class="n">love</span><span class="p">.</span><span class="n">graphics</span><span class="p">.</span><span class="n">newImage</span><span class="p">(</span><span class="s2">&quot;</span><span class="s">sprite_test.png&quot;</span><span class="p">)</span>
